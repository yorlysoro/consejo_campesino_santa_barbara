# Proteger archivos sensibles
<FilesMatch "\.(env|config|sql|db)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Proteger directorios sensibles
RedirectMatch 404 ^/(config|core|models|controllers|includes)/.*$

